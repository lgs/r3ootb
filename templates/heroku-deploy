puts 'sudo gem install heroku'
run 'sudo gem install heroku'

puts 'git init'
run 'git init'

puts 'git add .'
run 'git add .'

puts 'git commit -m "first commit"'
run 'git commit -m "first commit"'

puts "heroku create #{project_name}"
run "heroku create #{project_name}"

